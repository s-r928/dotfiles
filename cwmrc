# options
#

snapdist 24
moveamount 8


# keyboard binds
#

bind-key M-period menu-window
bind-key M-p dmenu_run
bind-key M-x k
bind-key M-o "xterm ranger"

bind-key MS-Return window-maximize
bind-key MS-C window-delete

bind-key M-h window-snap-left
bind-key M-l window-snap-right
bind-key M-k window-vmaximize
bind-key M-j window-snap-down

# group key rebinds (something like xmonad defaults)
bind-key CM-0 group-only-0
bind-key CM-1 group-only-1
bind-key CM-2 group-only-2
bind-key CM-3 group-only-3
bind-key CM-4 group-only-4
bind-key CM-5 group-only-5
bind-key CM-6 group-only-6
bind-key CM-7 group-only-7
bind-key CM-8 group-only-8
bind-key CM-9 group-only-9

bind-key M-0 group-toggle-0
bind-key M-1 group-toggle-1
bind-key M-2 group-toggle-2
bind-key M-3 group-toggle-3
bind-key M-4 group-toggle-4
bind-key M-5 group-toggle-5
bind-key M-6 group-toggle-6
bind-key M-7 group-toggle-7
bind-key M-8 group-toggle-8
bind-key M-9 group-toggle-9

bind-key MS-0 window-movetogroup-0
bind-key MS-1 window-movetogroup-1
bind-key MS-2 window-movetogroup-2
bind-key MS-3 window-movetogroup-3
bind-key MS-4 window-movetogroup-4
bind-key MS-5 window-movetogroup-5
bind-key MS-6 window-movetogroup-6
bind-key MS-7 window-movetogroup-7
bind-key MS-8 window-movetogroup-8
bind-key MS-9 window-movetogroup-9


# mouse binds
#

